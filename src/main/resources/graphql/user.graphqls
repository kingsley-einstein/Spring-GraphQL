type User {
    id: ID!
    name: String!
    password: String!
    articles: [Article]
}

type Query {
    findAllAuthors: [User]
    findById(id: ID!): User
}

type Mutation {
    newAuthor(name: String!, password: String!): User!
    updateName(id: ID!, name: String!): User!
    updatePW(id: ID!, password: String!): Boolean
    delete(id: ID!): Boolean
}