type Article {
    id: ID!
    title: String!
    content: String!
    author: User!
}

extend type Query {
    findAllArticles: [Article]
    findOne(id: ID!): Article
}

extend type Mutation {
    newArticle(title: String!, content: String!, author: ID!): Article!
    deleteOne(id: ID!): Boolean
    update(id: ID!, title: String!, content: String!): Boolean!
}